<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="renitto.com.copper_table_menu">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/jefe"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Main.Presenters.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Main.Presenters.MainActivity"/>

        <activity android:name=".Main.Presenters.MenuDetailActivity"
            android:parentActivityName=".Main.Presenters.MainActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".Main.Presenters.MainActivity" />
        </activity>

    </application>

</manifest>
