<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFFFFF"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/splash_iv_image"
        android:background="@drawable/jefe"
        android:layout_centerInParent="true"
        android:layout_width="500dp"
        android:layout_height="300dp" />

    <RelativeLayout
        android:background="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:id="@+id/splash_text_main"
            android:textSize="30sp"
            android:gravity="bottom"
            android:layout_centerHorizontal="true"
            android:text="Cooper Spoon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/splash_text_content"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:text="powered by Jankoz"
            android:layout_below="@+id/splash_text_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>